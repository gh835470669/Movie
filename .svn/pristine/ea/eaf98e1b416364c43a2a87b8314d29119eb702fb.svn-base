-- ----------------------------
-- Table structure for `video`
-- ----------------------------
DROP TABLE IF EXISTS `video`;
CREATE TABLE `video` (
  `video_id` int(11) NOT NULL AUTO_INCREMENT,
  `title` varchar(200) NOT NULL COMMENT '文章题目',
  `create_time` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP COMMENT '文章发布时间',
  `preinfo` varchar(500) NOT NULL COMMENT '文章导语',
  `video_url` varchar(400) NOT NULL COMMENT '视频链接',
  `preimage` varchar(400) DEFAULT NULL COMMENT '预览图',
  `source` varchar(400) DEFAULT NULL COMMENT '来源',
  `author` varchar(50) DEFAULT NULL COMMENT '编辑作者',
  `label` varchar(600) DEFAULT NULL COMMENT '标签名，以 | 分割',
  `type` int(11) NOT NULL,
  `click_num` int(11) NOT NULL DEFAULT '0' COMMENT '阅读量',
  `flag` tinyint(2) NOT NULL DEFAULT '1' COMMENT '0：无效；1：有效',
  `sort` int(11) DEFAULT NULL,
  `like_num` int(11) DEFAULT NULL,
  `unlike_num` int(11) DEFAULT NULL,
  `qrcode_url` varchar(100) DEFAULT NULL COMMENT '二维码路径',
  `video_length` varchar(100) DEFAULT NULL COMMENT '视频长度',
  `video_clarity` varchar(100) DEFAULT NULL COMMENT '视频清晰度',
  PRIMARY KEY (`video_id`)
) ENGINE=InnoDB AUTO_INCREMENT=345 DEFAULT CHARSET=utf8;

