<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.movie.MovieActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout8"
        android:background="@color/red">

        <Button
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_searchButton"
            android:background="@android:color/background_light"
            android:minHeight="5dp"
            android:minWidth="50dip"
            android:layout_toRightOf="@+id/movie_searchContent"
            android:layout_toEndOf="@+id/movie_searchContent"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@+id/movie_searchContent"
            android:layout_alignBottom="@+id/movie_searchContent" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/movie_searchContent"
            android:background="@android:color/background_light"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout8"
        android:id="@+id/movie_listview" />


</RelativeLayout>
