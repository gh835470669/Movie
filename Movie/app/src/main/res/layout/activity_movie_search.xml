<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.movie.MovieSearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/searchmovie_search"
        android:background="@color/red">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/searchmovie_searchContent"
            android:background="@android:color/background_light"
            android:hint="搜索电影名"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchmovie_search"
        android:id="@+id/searchmovie_listview" />

</RelativeLayout>
