.z_video_class-body {
    overflow-x: hidden;
}

.z_video_class-content {
    width: 1128px;
}

.z_video_class-content-list {
    margin-top: 40px;
    margin-right: 28px;
    border: 1px solid #dcdcdc;
    width: 252px;
    height: 214px;
}

.z_video-img {
    width: 252px;
    height: 144px;
}

.z_video_class-video-bg {
    top: 122px;
    left: 0px;

    width: 56px;
    height: 22px;

    background-color: #000;

    opacity: 0.5;
}

.z_video_class-video-time {
    top: 122px;
    left: 0px;

    width: 56px;
    height: 22px;

    line-height: 22px;
    text-align: center;

    color: #fff;
    font-size: 12px;
}

.z_video_class-play-bg {
    top: 53px;
    left: 110px;

    width: 40px;
    height: 40px;

    background-color: #000;

    opacity: 0.5;
}

.z_video_class-play-icon {
    top: 60px;
    left: 120px;

    width: 20px;
    height: 25px;

    opacity: 0.9;
}

.z_video_class-count {
    height: 20px;

    line-height: 20px;
}

.z_video_class-count  i {
    margin-right: 8px;
    margin-left: 8px;

    color: #999;
}

.z_video_class-count span {
    color: #999;
}

.z_video_class-video-title {
    overflow: hidden;

    margin-bottom: 10px;
    margin-left: 5px;
    width: 247px;
    height: 20px;

    line-height: 20px;
}

.z_video_class-more {
    margin: 50px 355px;
    height: 30px;
    width: 390px;

    line-height: 30px;
    text-align: center;

    color: #b1b1b1;
    background-color: #e9e9e9;
}

.z_video_class-more:hover {
    color: #707070;

    cursor: pointer;
}

.z_video_class-more1 {
    margin: 50px 355px;
    height: 30px;
    width: 390px;

    line-height: 30px;
    text-align: center;

    color: #b1b1b1;
    background-color: #e9e9e9;
}

.z_video_class-more1:hover {
    color: #707070;

    cursor: pointer;
}
