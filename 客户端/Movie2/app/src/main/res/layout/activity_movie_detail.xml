<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/d_5"
    android:background="@color/color_theme">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/back"
        android:layout_margin="@dimen/d_5"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d_10"
                android:background="@color/color_theme">
                <LinearLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="match_parent"
                        android:src="@mipmap/default_img"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/d_10">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ss"
                            android:textSize="@dimen/s_20"
                            android:textColor="@color/white"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6.8"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/s_18"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分"
                                android:textSize="@dimen/s_12"
                                android:textColor="@color/gray"
                                android:layout_marginLeft="@dimen/d_10"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/cat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ss"
                            android:textSize="@dimen/d_14"
                            android:textColor="@color/gray"
                            android:layout_marginTop="@dimen/d_5"/>
                        <TextView
                            android:id="@+id/length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ss"
                            android:textSize="@dimen/d_14"
                            android:textColor="@color/gray"
                            android:layout_marginTop="@dimen/d_5"/>
                        <TextView
                            android:id="@+id/shwDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ss"
                            android:textSize="@dimen/d_14"
                            android:textColor="@color/gray"
                            android:layout_marginTop="@dimen/d_5"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_below="@+id/top">
                    <LinearLayout
                        android:id="@+id/like"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/d_5"
                        android:background="@drawable/like">
                        <ImageView
                            android:id="@+id/like_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/dislike"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="想看"
                            android:textColor="@color/gray"
                            android:layout_marginLeft="@dimen/d_10"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/haveSeen"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d_5"
                        android:background="@drawable/like"
                        android:layout_marginLeft="@dimen/d_14"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/haveSeen_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/unstar"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="看过"
                            android:textColor="@color/gray"
                            android:layout_marginLeft="@dimen/d_10"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ss"
                android:textSize="@dimen/s_16"
                android:textColor="@color/black"
                android:padding="@dimen/d_10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户评论:"
                android:textSize="@dimen/s_18"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/d_5"
                android:padding="@dimen/d_10"/>

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>